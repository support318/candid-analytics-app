{
    "name": "candid-studios/analytics-api",
    "description": "High-performance REST API for Candid Studios Analytics Dashboard",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.5",
        "firebase/php-jwt": "^5.0",
        "predis/predis": "^2.2",
        "vlucas/phpdotenv": "^5.6",
        "tuupola/slim-jwt-auth": "^3.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "CandidAnalytics\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CandidAnalytics\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "lint": "phpcs src/"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
